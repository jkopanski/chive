{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "flowtype",
    "import"
  ],
  "rules": {
    "arrow-parens": [2, 'as-needed'],
    "jsx-quotes": ["error", "prefer-single"],
    "no-duplicate-imports": 0,
    "flowtype/define-flow-type": 2,
    "import/no-duplicates": 2
  },
  "globals": {
    "__DEV__": true,
    "fetch": false,
    "FileReader": false,
    "FormData": false,
    "Generator": true,
    "Headers": false,
    "localStorage": false,
    "Request": false,
    "sessionStorage": false
  }
}
